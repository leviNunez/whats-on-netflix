<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsOnNetflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.WhatsOnNetflix">
        <item name="android:textColorSecondary">@color/design_default_color_surface</item>
    </style>

    <style name="CustomHeadline1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomHeadline2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="CustomHeadline3" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/small_text</item>
    </style>

    <style name="CustomCircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
    </style>


</resources>
